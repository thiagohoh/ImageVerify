package FisrtCode;
import java.awt.Component;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;
import javax.imageio.ImageIO;
 

public class GetRGB extends Component {
	
	public void PrintPixel(int pixel,int j,int i){
		int alpha = (pixel >> 24) & 0xff;
	    int red = (pixel >> 16) & 0xff;
	    int green = (pixel >> 8) & 0xff;
	    int blue = (pixel) & 0xff;
	    System.out.println("argb: " + alpha + ", " + red + ", " + green + ", " + blue);
	    Filerino ww = new Filerino();
	    ww.WriterinoSimpleAppend3(j, i);
	    ww.WriterinoSimpleAppend2(alpha, red, blue, green);
	}

	
	public void MarchImage(BufferedImage image){
		int w = image.getWidth();
		int h = image.getHeight();
		System.out.println("W e H"+ w +", " + h);
		for(int i = 0 ; i<h ;i++){
			for(int j=0 ; j<w ;j++){
				System.out.println("x,y"+ j+ "," +i);
				int pixel = image.getRGB(j, i);
				
				
				PrintPixel(pixel,j,i);
				System.out.println("");
			}
		}
		
	}
	
	public void GetImage(){
		try {
		     
		      BufferedImage image = ImageIO.read(new File("C:\\Users\\Thiago\\Desktop\\Java test\\Menina Ai Uehara.jpg"));
		      MarchImage(image);
		    } catch (IOException e) {
		      e.printStackTrace();
		    }
		  }
	}
	
	
